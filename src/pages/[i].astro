        }

        to {
            -webkit-transform: perspective(1000px);
            transform: perspective(1000px);
            opacity: 1;
        }
    }

    @-webkit-keyframes flipOutY {
        from {
            -webkit-transform: perspective(1000px);
            transform: perspective(1000px);
        }
        45% {
            opacity: 1;
        }
        50% {
            opacity: 0;
            background-color: wheat;
            padding-right: 10%;
        }

        to {
            -webkit-transform: rotateY(-180deg);
            transform: perspective(1000px) rotateY(-180deg);
            opacity: 0;
            width: 100%;
